    <script src="~/Scripts/jquery-timepicker/jquery.timepicker.min.js"></script>
    <script type="text/javascript">
        $(function () {
            // 2日本語を有効化
            $.datepicker.setDefaults($.datepicker.regional['ja']);
            // 3日付選択ボックスを生成
            $('#KaisaiDate_Start').datepicker({
                dateFormat: 'yy/mm/dd',
                changeMonth: true,
                changeYear: true
            });
            // 3日付選択ボックスを生成
            $('#KaisaiDate_End').datepicker({
                dateFormat: 'yy/mm/dd',
                changeMonth: true,
                changeYear: true
            });
            $('#KaisaiTime_Start').timepicker({ 'step': 30, 'timeFormat': 'H:i', 'scrollDefaultNow': true });
            $('#KaisaiTime_End').timepicker({ 'step': 30, 'timeFormat': 'H:i', 'scrollDefaultNow': true });
            jQuery("#MaxNinzu").spinner(
                    {
                        max: 99999,
                        min: 0
                    }
                );

        });
    </script>
